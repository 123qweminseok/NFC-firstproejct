<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/ae"

    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="성결대학교 창의인재 프로젝트"
        android:textColor="#B8A91C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성결대학교"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전화번호"
            android:inputType="text"
            android:layout_marginTop="32dp"/>

        <CheckBox
            android:id="@+id/save_credentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학번/사번/패스워드 저장"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="※ 학번/사번/패스워드 저장시 개인정보유출에 유의해 주세요!"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/ManagerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리자모드"
        android:backgroundTint="@android:color/holo_blue_light" />

</LinearLayout>
