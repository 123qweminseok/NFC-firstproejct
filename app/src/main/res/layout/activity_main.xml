<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="성결대학교 창의인재 프로젝트"
        android:textColor="@color/sky" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/bluespace"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="24sp"
            android:textColor="@color/sky"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/black"
        android:hint="전화번호"
        android:textColorHint="@color/gray"
        android:inputType="text"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="@drawable/rectangle_edittext_background"/>

        <CheckBox
            android:id="@+id/save_credentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호 저장"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="로그인"
            android:backgroundTint="@color/sky"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="※ 전화번호 저장시 개인정보유출에 유의해 주세요!"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/ManagerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리자모드"
        android:backgroundTint="@color/sky" />

</LinearLayout>